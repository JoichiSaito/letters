<div class="container">
  <h3>新規登録</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :ユーザー名 %>(30文字以内)<br />
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :email, 'メールアドレス(※登録後は変更できません)' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password, 'パスワード' %>(最低6文字以上)<br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'パスワード' %>(もう一度入力してください)<br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :private, 'アカウントを非公開にする' %>
      <%= f.check_box :private %>
    </div>

    <div class="form-group">
      <%= f.label :position, 'ポジション(※登録後は変更できません)' %><br />
      <%= f.select :position, [["学校", 0 ], ["保護者", 1], ], include_blank: "選択して下さい", class: 'form-control' %>
    </div>

    <div>
      <%= f.submit "登録する", class: 'btn btn-primary mt-3 mb-5' %>
    </div>
  <% end %>
</div>
